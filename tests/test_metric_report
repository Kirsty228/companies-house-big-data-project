import unittest

from metrics.metric_report import PipelineMetrics


class TestMetricReport(unittest.TestCase):
    """
    Tests for metric report.
    """

    def test_precision_positive(self):
        """
        Positive test case for the metric_report function: all arguments
        passed are of type float less than or equal to 1.
        """
        # Assume
        metrics = PipelineMetrics()

        # Assert
        with self.assertRaises(TypeError):
            metrics.metrics_reports(0.1, 0.2, 0.3, 0.4)

        with self.assertRaises(TypeError):
            metrics.metrics_reports(0.1, 0.2, 0.3, 0.4)

        with self.assertRaises(TypeError):
            metrics.metrics_reports(0.1, 0.2, 0.3, 0.4)

        with self.assertRaises(TypeError):
            metrics.metrics_reports(0.1, 0.2, 0.3, 0.4)

    def test_precision_negative(self):
        """
        Negative test case for the metric_report function.
        """
        # Assume
        metrics = PipelineMetrics()

        # Assert
        with self.assertRaises(TypeError):
            metrics.metrics_reports(10, 0.2, 0.3, 0.4)

        with self.assertRaises(TypeError):
            metrics.metrics_reports(0.1, 20, 0.3, 0.4)

        with self.assertRaises(TypeError):
            metrics.metrics_reports(0.1, 0.2, 30, 0.4)

        with self.assertRaises(TypeError):
            metrics.metrics_reports(0.1, 0.2, 0.3, 40)

    def test_types(self):
        """
        Test correct argument types passed.
        """
        # Assume
        metrics = PipelineMetrics()

        # Assert
        with self.assertRaises(TypeError):
            metrics.metrics_reports(1, 1.0, 1.0, 1.0)

        with self.assertRaises(TypeError):
            metrics.metrics_reports(1.0, 1, 1.0, 1.0)

        with self.assertRaises(TypeError):
            metrics.metrics_reports(1.0, 1.0, 1, 1.0)

        with self.assertRaises(TypeError):
            metrics.metrics_reports(1.0, 1.0, 1.0, 1)

    def test_values(self):
        """
        Test values are provided as arguments.
        """
        # Assume
        metrics = PipelineMetrics()

        # Assert
        with self.assertRaises(ValueError):
            metrics.metrics_reports(None, 0.2, 0.3, 0.4)

        with self.assertRaises(ValueError):
            metrics.metrics_reports(0.1, None, 0.3, 0.4)

        with self.assertRaises(ValueError):
            metrics.metrics_reports(0.1, 0.2, None, 0.4)

        with self.assertRaises(ValueError):
            metrics.metrics_reports(0.1, 0.2, 0.3, None)


if __name__ == '__main__':
    unittest.main()
